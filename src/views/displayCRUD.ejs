<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Get CRUD</title>
</head>
<style>
    table,
    th,
    td {
        border: 1px solid black;
        /* border-collapse: collapse; */
    }

    .btn {
        outline: none;
        border: none;
        background: rgb(247, 196, 30);
        height: 25px;
        width: 60px;
        border-radius: 3px;
        cursor: pointer;
        color: white;
        padding: 2px 5px;
    }

    .btn-edit {
        background: rgb(206, 159, 5);
    }

    .btn-delete {
        background: rgb(175, 44, 11);
    }
</style>

<body>
    <table style="width:100%">
        <tr>
            <th>Email</th>
            <th>Fist name</th>
            <th>Last name</th>
            <th>Address</th>
            <th>Action</th>
        </tr>

        <% for(var i=0; i < dataTable.length; i++) { %>
            <tr>
                <td>
                    <%= dataTable[i].email %>
                </td>
                <td>
                    <%= dataTable[i].firstName %>
                </td>
                <td>
                    <%= dataTable[i].lastName %>
                </td>
                <td>
                    <%= dataTable[i].address %>
                </td>
                <td>
                    <a href="/edit-crud?id=<%= dataTable[i].id %>" class="btn btn-edit">Edit</a>
                    <a href="/delete-crud?id=<%= dataTable[i].id %>" class="btn btn-delete">Delete</a>
                </td>
            </tr>
            <% } %>
    </table>

</body>

</html>